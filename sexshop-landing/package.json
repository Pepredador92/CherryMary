{
  "name": "sexshop-landing",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite src",
    "build": "vite build src --outDir ../dist",
    "preview": "vite preview dist --port 4173",
    "lint": "eslint \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.{html,css,js,json,md}\" \"*.{md,json,toml}\""
  },
  "devDependencies": {
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "vite": "^6.0.6"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": ["eslint:recommended"],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  }
}
